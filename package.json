{
  "name": "colocale",
  "version": "0.1.1",
  "description": "A lightweight i18n library with fragment collocation pattern that works across frameworks and runtimes",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "colocale": "./dist/cli/main.js"
  },
  "files": ["dist"],
  "author": "Urotea",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Urotea/colocale.git"
  },
  "homepage": "https://github.com/Urotea/colocale#readme",
  "bugs": {
    "url": "https://github.com/Urotea/colocale/issues"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "nextjs",
    "react",
    "typescript",
    "pluralization"
  ],
  "scripts": {
    "build": "tsup",
    "check": "bun run src/cli/main.ts check",
    "codegen": "bun run src/cli/main.ts codegen",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "tsup": "^8.5.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "commander": "^14.0.2"
  }
}
